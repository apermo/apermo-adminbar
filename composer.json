{
  "name": "apermo/apermo-adminbar",
  "description": "A WordPress plugin, that adds links between your different development versions of your website.",
  "minimum-stability": "stable",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Contributors",
      "homepage": "https://github.com/apermo/apermo-adminbar/graphs/contributors"
    }
  ],
  "support": {
    "issues": "https://github.com/apermo/apermo-adminbar/issues"
  },
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1.0",
    "wp-coding-standards/wpcs": "~2.3.0"
  },
  "scripts": {
    "standards:check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "standards:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
